<div class="user-info-container">
    <div class="left">
      <div class="name">
        {{user.name}}
      </div>
      <div class="details">
          <div class="score">
            {{user.score}} <span class="score-icon small"></span>
          </div>
          <div class="level">
            Level: <span class="level-name">{{user.level}}</span>
          </div>
      </div>
    </div>
    <div class="right">
      <div class="avatar">
        <img src="{{avatarUrl}}">
      </div>
      <div class="signout">
        {{#link-to 'signout' class="mdl-navigation__link"}}
          {{mdl-icon icon="exit_to_app"}}
        {{/link-to}}
      </div>
    </div>
</div>
