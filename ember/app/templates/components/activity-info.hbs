<div class="activity-info">
  {{#link-to 'app.activities.view' activity.id tagName="div" class="activity-image"}}
    {{#hosted-image src=activity.logo }}{{/hosted-image}}
  {{/link-to}}
  <div class="activity-content">
    {{#link-to 'app.activities.view' activity tagName="h5"}}
      {{activity.name}}
    {{/link-to}}
    <div class="score">
      {{count}}/{{activity.score}}  <span class="score-icon small"></span>
    </div>
    {{#progress-bar count=count total=activity.score}}{{/progress-bar}}
    <div class="description">
      {{activity.description}}
    </div>
  </div>
</div>
